<!DOCTYPE html>
<html lang="ko">
<%- include('../layout/head') %>
<body>
  <%- include('../layout/header') %>
	<div class="container">
		<section>
			<div>				
				<table class="table">
					<colgroup>
						<col width="50">
						<col>
						<col width="100">
						<col width="70">
						<col width="160">
					</colgroup>
					<thead>
						<tr>
							<th>번호</th>
							<th>제목</th>
							<th>글쓴이</th>
							<th>조회</th>
							<th>작성일</th>
						</tr>
					</thead>
					<tbody>
            <% list.forEach(function(article, i){ %>
              <tr class="active">
                <td><%=article._id%></td>
                <td><a href="/board/<%=article._id%>"><%=article.title%></a></td>
                <td><%=article.writer%></td>
                <td><%=article.view%></td>
                <td><%=article.regdate%></td>
              </tr>
            <% }); %>
					</tbody>
				</table>
			</div>
			<hr>
			<div class="form-group text-center">
				<a href="/board/new" class="btn btn-default btn-sm">글쓰기</a>
			</div>
		</section>
	</div>
  <%- include('../layout/footer') %>
</body>
</html>
